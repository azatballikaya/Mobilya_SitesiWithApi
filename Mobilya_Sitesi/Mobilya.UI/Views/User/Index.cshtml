                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
  </header>
    <!-- ***** Header Area End ***** -->

    <div class="page-heading header-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span class="breadcrumb"><a href="#">Home</a> / Properties</span>
                    <h3>Ürünler</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="section properties">
        <div class="container">
            <ul class="properties-filter">
                <li>
                    <a class="is_active" href="#!" >Show All</a>
                </li>
                <li>
                    <a href="#!" data-filter=".adv">Koltuk</a>
                </li>
                <li>
                    <a href="#!" data-filter=".str">Masa</a>
                </li>
               
            </ul>
         
            <div class="row properties-box">
                @foreach (var item in Model)
                {
                    
                        string filterWord = "";
                        if (item.CategoryId == 1)
                        {
                            filterWord = "adv";
                        }
                        if (item.CategoryId == 2)
                        {
                            filterWord = "str";
                        }
                    
                    <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 @filterWord">
                        <div class="item">
                        <a href="property-details.html"><img src="~/img/@item.Image" alt=""></a>
                        <span class="category">@item.CategoryName</span>
                        <h6>@item.Price.ToString("N") ₺</h6>
                        <h4><a href="property-details.html">@item.ProductName</a></h4>
                        @* <ul>
                            <li>Bedrooms: <span>8</span></li>
                            <li>Bathrooms: <span>8</span></li>
                            <li>Area: <span>545m2</span></li>
                            <li>Floor: <span>3</span></li>
                            <li>Parking: <span>6 spots</span></li>
                        </ul> *@
                        <div class="main-button">
                            <a asp-area="" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.ProductId">Sepete Ekle</a>
                        </div>
                    </div>
                </div>
                }
            </div>
            
            @* <div class="row">
                <div class="col-lg-12">
                    <ul class="pagination">
