@model CreateUserViewModel

<h1 class="text-success">Kullanıcı Kayıt Sayfası</h1>
<form action="/Admin/User/AddUser" method="post">
  <div><span asp-validation-summary="All"></span></div>
    <div class="mb-3">
        <label for="ProductName" class="form-label">Admin Kullanıcı Adı: </label>
        <input type="text" asp-for="UserName" class="form-control">

    </div>
    <div class="mb-3">
        <label class="form-label">Şifre: </label>
        <input type="password" asp-for="Password" class="form-control">
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <label>Rol Seçiniz: </label>
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <input type="hidden" asp-for="@Model.Roles[i].RoleId"/>
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName"/>
                    <div class="form-check">
                        <input class="form-check-input" asp-for="@Model.Roles[i].IsChecked" id="checkbox_@i">
                        <label class="form-check-label" for="checkbox_@i">
                            @Model.Roles[i].RoleName
                        </label>
                    </div>
                }

            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
</form>

