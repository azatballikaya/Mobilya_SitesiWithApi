@model List<ListProductViewModel>
<thead>
    <tr>
        <th>Ürün Id</th>
        <th>Ürün Adı</th>
        <th>Resim</th>
        <th>Ürün Fiyatı</th>
        <th>Açıklama</th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductId</td>
            <td>@product.ProductName</td>
            <td><img src="~/img/@product.Image" style="height:150px; width:300px;"></td>
            <td>@product.Price</td>
            <td>@product.Description</td>
            <td>
                <a href="/Home/EditProduct/@product.ProductId" class="btn btn-primary">Edit</a>
                <a href="/Home/DeleteProduct/@product.ProductId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</tbody>